<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <RootNamespace>Capl</RootNamespace>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Description>Claims Authorization Policy Language for .NET Core v3.0</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/skunklab/SkunkLab.Core</PackageProjectUrl>    
    <RepositoryUrl>https://github.com/skunklab/capl</RepositoryUrl>
    <PackageIcon>skunklab.png</PackageIcon>
    <PackageReleaseNotes>CAPL - Claims Authorization Policy Language for .NET Core v.3.0</PackageReleaseNotes>
    <Copyright>2018</Copyright>
    <AssemblyName>Capl</AssemblyName>
    <Version>3.0.0</Version>
    <PackageId>Capl</PackageId>
    <Authors>theskunklab@gmail.com</Authors>
    <Company>Skunk Lab</Company>
    <PackageTags>CAPL</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="skunklab.png" Pack="true" PackagePath="" />
  </ItemGroup>
    
  <ItemGroup>
    <None Update="skunklab.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
